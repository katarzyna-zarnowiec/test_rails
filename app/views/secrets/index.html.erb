<% provide(:title, 'Investment Focus') %>
<div class="center"> 
	<div class="row">
	  <div class="col-xs-12 col-centered">
	  	<%= image_tag("investment_focus_cabecera.jpg", class: "img-responsive primary") %>
	  </div>
	</div>
	<div class="row">
	  <div class="col-md-2  visible-md visible-lg">
	  </div>
	  <div class="col-xs-12 col-md-8 col-centered">
			<h1 id="motto"><mark class="grey">Investment </mark><mark class="blue">focus
		</div>
	  <div class="col-md-2 visible-md visible-lg">
	  </div>
	</div>
	<div class="row vcenter">
	  <div class="col-md-2  visible-md visible-lg">
	  </div>
	  <div class="col-xs-2 col-md-1  text-left">
	  	<%= image_tag("key_left.png") %>
	  </div>
	  <div class="col-xs-8 col-md-6 col-centered">
			<p class="italic">"Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus."</p>

		</div>
	  <div class="col-xs-2 col-md-1 text-right">
	  	<%= image_tag("key_right.png") %>
	  </div>
	  <div class="col-md-2 visible-md visible-lg">
	  </div>
	</div>
	<% @secrets.each do |secret| %>
    <div class="row vcenter alternating">
	  	<div class="col-md-2  visible-md visible-lg">
	  	</div>
			<% if (secret.id.to_i % 2) == 0 %>
				<div class="col-xs-4 col-md-4">
					<%= image_tag(secret.image, class: "img-responsive pull-left") %>
				</div>
				<div class="col-xs-8 col-md-4">
					<div class="caption"><%= secret.text %></div>
				</div>
			<% else %>
				<div class="col-xs-8 col-md-4">
					<div class="caption"><%= secret.text %></div>
				</div>
				<div class="col-xs-4 col-md-4">
					<%= image_tag(secret.image, class: "img-responsive pull-right") %>
				</div>
			<% end %>
	  	<div class="col-md-2  visible-md visible-lg">
	  	</div>	
  </div>
  <% end %>	
</div>

