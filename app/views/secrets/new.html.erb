<h1>Add new secret</h1>
<div class="row">
  <div class="col-md-3 visible-md visible-lg">
	</div>
  <div class="col-md-6">
    <%= form_for(@secret) do |s| %>
			<%= render 'shared/error_messages' %>
      <%= s.label :image_name %>
      <%= s.text_field :image, class: 'form-control'  %>

      <%= s.label :text %>
      <%= s.text_field :text, class: 'form-control'  %>

      <%= s.submit "Add new secret", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-3 visible-md visible-lg">
	</div>
</div>
